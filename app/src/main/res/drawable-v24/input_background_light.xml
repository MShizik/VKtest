<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="200" android:exitFadeDuration="200">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_field_pressed"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="@color/black"/>
            <solid android:color="@color/light_field_stable"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>